<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/itm_image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:scaleType="fitCenter"
            android:src="@color/colorAccent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itm_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:text="Tag"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/itm_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:paddingStart="5dp"
                android:paddingTop="0dp"
                android:paddingBottom="8dp"
                android:text="Pickle #1"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/itm_op"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:paddingTop="5dp"
                    android:text="20"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/itm_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="90dp"
                    android:text="20"
                    android:textColor="@android:color/black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/seller_ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="5dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="90dp"
                    android:text="20"
                    android:textColor="@android:color/black"
                    android:textSize="17sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingEnd="2dp">

                    <at.markushi.ui.CircleButton
                        android:id="@+id/itm_btn_remove"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_remove_black_24dp"
                        app:cb_color="@color/colorAccent"
                        app:cb_pressedRingWidth="8dip" />


                    <TextView
                        android:id="@+id/itm_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:text="0"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <at.markushi.ui.CircleButton
                        android:id="@+id/itm_btn_add"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_add_black_24dp"
                        app:cb_color="@color/colorAccent"
                        app:cb_pressedRingWidth="8dip" />

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</android.support.design.card.MaterialCardView>